<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.fernandodeleon.org.milogllamadas.MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llamadas"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnMostrarLlamadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar Llamadas"
        android:onClick="mostrarLlamadas"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLlamadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listado de llamadas"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
